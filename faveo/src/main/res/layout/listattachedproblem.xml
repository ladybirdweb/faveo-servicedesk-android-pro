<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ticket"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="6dp"
    android:elevation="6dp"
    card_view:cardCornerRadius="6dp"
    android:background="@drawable/rectanglenew"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/problemList"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/rectanglenew"
        android:backgroundTint="@color/colorAccent"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView_client_email"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:alpha=".54"
            android:fontFamily="@font/hintedlainesansregular"
            android:maxLines="1"
            android:text="From :"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/collaboratorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/impact"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/hintedlainesansregular"
            android:maxLines="1"
            android:text="@string/subject"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <!--<TextView-->
            <!--android:id="@+id/textViewOptions"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_above="@+id/textView_client_email"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:background="@drawable/menudot"-->
            <!--android:backgroundTint="@color/faveo"-->
            <!--android:textAppearance="?android:textAppearanceLarge"-->
            <!--android:visibility="visible" />-->

        <TextView
            android:id="@+id/impact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView_client_email"
            android:fontFamily="@font/hintedlainesansregular"
            android:text="@string/Impact"
            android:textSize="16sp"
            android:visibility="visible" />


        <ImageButton
            android:id="@+id/detach"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="303dp"
            android:background="@drawable/rounded_button"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="@color/faveo" />



    </RelativeLayout>

</android.support.v7.widget.CardView>