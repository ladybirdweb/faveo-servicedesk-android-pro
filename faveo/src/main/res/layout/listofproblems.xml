<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/ticket"
android:layout_width="match_parent"
android:layout_height="80dp"
    android:layout_margin="6dp"
    android:elevation="6dp"
    card_view:cardCornerRadius="6dp"
android:background="@drawable/rectanglenew"
>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/problemList"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:background="@drawable/rectanglenew"
        android:backgroundTint="@color/colorAccent"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView_client_email"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/collaboratorname"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="24dp"
            android:alpha=".54"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="From :"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/collaboratorname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewOptions"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="-24dp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="Sayar Samanta"
            android:textSize="16sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/textViewOptions"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/textView_client_email"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/faveo"
            android:textAppearance="?android:textAppearanceLarge"
            android:visibility="visible" />

        <com.github.curioustechizen.ago.RelativeTimeTextView
            android:id="@+id/textView_ticket_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView_client_email"
            android:alpha=".50"
            android:layout_marginBottom="5dp"
            android:maxLines="1"
            android:fontFamily="sans-serif-medium"
            android:text="@string/dummy_date"
            android:textColor="@color/black"
            android:textSize="14sp" />


    </RelativeLayout>

    </android.support.v7.widget.CardView>