<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/colorAccent">

            <TextView
                android:id="@+id/selectAgentView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:text="@string/selectAgent"
                android:textSize="12sp"
                android:fontFamily="@font/hintedlainesansregular"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignTop="@+id/selectAgentView"
                android:layout_toEndOf="@+id/selectAgentView"
                android:fontFamily="@font/hintedlainesansregular"
                android:src="@drawable/ic_star_black_24dp"
                android:text="@string/required"
                android:textSize="12sp" />
            />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey_500"
            android:alpha=".3">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorAccent">

            <android.support.v7.widget.AppCompatAutoCompleteTextView
                android:id="@+id/selectAssignee"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="15dp"
                android:background="@color/colorAccent"
                android:fontFamily="@font/hintedlainesansregular"
                android:nextFocusForward="@+id/spinner_help"
                android:entries="@array/spinnerAssignTo"
                android:hint="@string/SelectAssignee"/>

            <TextView
                android:id="@+id/buttonAssign"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rectanglereachout"

                android:text="ASSIGN"
                android:fontFamily="@font/hintedlainesansregular"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:visibility="visible"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_500"
                android:alpha=".3">

            </View>
        </LinearLayout>

    </LinearLayout>
</ScrollView>


