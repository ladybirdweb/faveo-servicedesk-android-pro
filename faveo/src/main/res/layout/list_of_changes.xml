<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ticket"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="6dp"
    android:elevation="6dp"
    card_view:cardCornerRadius="6dp"
    android:background="@drawable/rectanglenew"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/problemList"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:background="@drawable/rectanglenew"
        android:backgroundTint="@color/colorAccent"
        android:padding="10dp">

        <TextView
            android:id="@+id/collaboratorname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewOptions"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="1dp"
            android:maxLines="1"
            android:text="Sayar Samanta"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/textViewOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView_client_email"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="-1dp"
            android:backgroundTint="@color/faveo"
            android:textAppearance="?android:textAppearanceLarge"
            android:visibility="visible" />

        <com.github.curioustechizen.ago.RelativeTimeTextView
            android:id="@+id/textView_ticket_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/collaboratorname"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:alpha=".50"
            android:maxLines="1"
            android:text="@string/dummy_date"
            android:textColor="@color/black"
            android:textSize="14sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>